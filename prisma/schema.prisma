generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_PRISMA_URL")
  shadowDatabaseUrl = env("DATABASE_URL_NON_POOLING")
}

model Link {
  id           Int         @id @default(autoincrement())
  url          String      @unique
  shortUrl     String      @unique
  createdAt    DateTime    @default(now())
}